/* pages/map/map.wxss */
page {
    background-color: #ccc;
 }


.searchInput{
  width: 100%; 
  display: flex;
  flex-direction: row;
  border: 1px solid #d0d0d0;  
  border-radius: 10rpx;  
  margin-left: 20rpx;
  margin-top: 20rpx;
}

.searchcion
{
      margin: 10rpx 10rpx 10rpx 10rpx;  
      position: absolute;  
      left:25rpx;  
      z-index: 2;  
      width: 20px;  
      height: 20px;  
      text-align: center; 
}

input {
    width: 70%;
    padding-left: 60rpx;
    height: 60rpx;  
    border-radius: 5px;  
    background-color: #fff;
} 

.searchLabel {
      margin-left: 15rpx;  
      width: 15%;  
      line-height: 150%;  
      text-align: center;
      background-color: white;  
      border: 1px solid #d0d0d0;  
      border-radius: 10rpx;  
}

button {
  display: block;
  width: 100%;
  padding-left: 20rpx;
  height: 60rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: red;
  text-align: center;
  border-style: none;
  background-color: rgba(255,255,255, 0.6);
}

.map_container{
    position: fixed;
    top: 100rpx;
    height: 840rpx;
    width: 100%;
    z-index: -1;
}

.map {
    height: 100%;
    width: 100%;
}

.rgc_info {
    position: fixed;
    top: 950rpx;
    padding: 0 10rpx;
    color: green;
    font-size: 30rpx;
}