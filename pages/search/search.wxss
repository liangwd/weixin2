/* pages/search/search.wxss */
page {
    background-color: #ccc;
}


.icp_container{
  width: 100%; 
  top: 20rpx;
  position: absolute;
  display: flex;
  flex-direction: row;
  border: 1px solid #d0d0d0;  
  border-radius: 10rpx;  
  margin-left: 20rpx;
  margin-top: 10rpx;
}
.searchcion{
      position: absolute;
      margin-top:10rpx;  
      left:10rpx;  
      z-index: 2;  
      width: 25px;  
      height: 25px;  
      text-align: center; 
}

input{
    width: 70%;
    padding-left: 60rpx;
    height: 60rpx;  
    border-radius: 5px;  
    background-color: #fff;
    font-weight: bold;
}

.ok{
      margin-left: 15rpx;  
      width: 15%;  
      line-height: 150%;  
      text-align: center;
      background-color: white;  
      border: 1px solid #d0d0d0;  
      border-radius: 10rpx;  
}



#listcontainer{
  width: 100%;
  margin-top:120rpx;
}

#listitem{
  margin-left:30rpx;
  margin-top:10rpx; 
  border:1rpx solid #fff; 
  padding: 5rpx;
  width:90%;
  height:160rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
#itemimg{
  margin-left: 20rpx;
  margin-right: 20rpx;
  width: 200rpx;
  height: 150rpx;
  mode:"aspectFill";
}
#iteminfo{
  color: green;
  font-weight: bold;
  font-size: 30rpx;
}

#pageskip{
  width: 100%;
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center; 
  text-align: center;
  padding: 10rpx;
  justify-content: center;
}

